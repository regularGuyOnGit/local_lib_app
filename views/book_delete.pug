extends layout

block content

  h1 #{title}: #{allBook.title}

  if bookInstance.length

    p #[strong Delete the following books instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books-Instances
      dl
        each book in bookInstance
          dt
            a(href=book.url) #{book.imprint}
          dd #{book.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookId.form-control(type='hidden', name='bookId', value=author._id )

      button.btn.btn-primary(type='submit') Delete
